<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotel.View.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame CornerRadius="10"
                   Margin="20"
                   VerticalOptions="CenterAndExpand"
                   Padding="10">

                <StackLayout>
                    <Label Text="LOGIN HOTEL" FontSize="Title"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Usuário:" />
                    <Entry x:Name="txt_usuario" />
                    <Label Text="Senha:" />
                    <Entry IsPassword="True" x:Name="txt_senha" />
                    <Button Text="Entrar" Clicked="Button_Clicked" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>